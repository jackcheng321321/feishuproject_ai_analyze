# Docker部署环境配置文件
# 复制到 .env 文件并根据实际需求修改

# 基础配置
COMPOSE_PROJECT_NAME=ai-analysis-platform

# 数据库配置
POSTGRES_DB=ai_analysis_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PORT=5433

# Redis配置
REDIS_PASSWORD=
REDIS_PORT=6380

# 后端配置
BACKEND_PORT=8000
SECRET_KEY=your_jwt_secret_key_32_chars_minimum
ENCRYPTION_KEY=your_encryption_key_32_chars_long
DEBUG=true
LOG_LEVEL=INFO

# 前端配置
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=AI综合分析管理平台

# Webhook配置
WEBHOOK_BASE_URL=http://localhost:8000/api/v1/webhooks

# 文件处理配置
MAX_FILE_SIZE_MB=100
DEFAULT_AI_TIMEOUT=300
MAX_RETRIES=3

# CORS配置（宽松模式）
CORS_ORIGINS=*

# Celery监控配置
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# 监控配置（可选）
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# Nginx配置（可选）
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443